<%= form_for(@post) do |f| %>

  <div class="form-group">
    <%= f.label :Movie %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :Quote %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "submit", class: "btn btn-primary" %>
  </div>
<% end %>
